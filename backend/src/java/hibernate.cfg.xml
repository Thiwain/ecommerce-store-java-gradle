<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC 
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/platos_db?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">2005@Thiwain</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>

        <property name="hibernate.hbm2ddl.auto">create</property> <!-- Use `create` for clean testing, `update` for real use -->


        <!-- Entity Mappings -->
        <!-- Authentication -->
        <mapping class="com.plato.models.users.User"/>
        <mapping class="com.plato.models.users.Gender"/>
        <mapping class="com.plato.models.users.UserAuthStatus"/>
        <mapping class="com.plato.models.users.UserAuth"/>
        <mapping class="com.plato.models.users.Location"/>
        <mapping class="com.plato.models.users.District"/>
        <mapping class="com.plato.models.users.AdminUser"/>
        <mapping class="com.plato.models.users.Access"/>
        <mapping class="com.plato.models.users.AdminUserHasAccess"/>
        <!-- Authentication -->

        <!-- Product -->
        <mapping class="com.plato.models.product.Author"/>
        <mapping class="com.plato.models.product.Publisher"/>
        <mapping class="com.plato.models.product.Category"/>
        <mapping class="com.plato.models.product.ProductDetails"/>
        <mapping class="com.plato.models.product.ProductDetailsHasTag"/>
        <mapping class="com.plato.models.product.SearchTag"/>
        <!-- Product -->

        <!-- Order -->
        <mapping class="com.plato.models.orders.FulFillStatus"/>
        <mapping class="com.plato.models.orders.Orders"/>
        <!-- Order -->

        <!-- Invoice -->
        <mapping class="com.plato.models.invoice.Invoice"/>
        <mapping class="com.plato.models.invoice.InvoiceHasProductDetails"/>
        <!-- Invoice -->

        <!-- GRN -->
        <mapping class="com.plato.models.grn.Grn"/>
        <mapping class="com.plato.models.grn.GrnHasProductDetails"/>
        <mapping class="com.plato.models.grn.Supplier"/>
        <!-- GRN -->
        <!-- Entity Mappings -->


    </session-factory>
</hibernate-configuration>
